@model T034.ViewModel.UserViewModel

@{
    ViewBag.Title = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddOrEdit", "User"))
{
    <div class="control-group warning">
        <label class="control-label">@Html.LabelFor(m => m.Name)</label>
        <div>
            @Html.TextBoxFor(m => m.Name, new Dictionary<string, object> { { "class", "input-xxlarge" } })
            @Html.HiddenFor(m => m.Id)
        </div>
        
        <label class="control-label">@Html.LabelFor(m => m.Email)</label>
        <div>
            @Html.TextBoxFor(m => m.Email, new Dictionary<string, object> { { "class", "input-xxlarge" } })
        </div>

        <label class="control-label">@Html.LabelFor(m => m.Roles)</label>
        <div>
            @Html.TextAreaFor(m => m.Roles, new Dictionary<string, object> { { "class", "input-xxlarge" } })
        </div>

    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    </div>
}
