@model T034.ViewModel.FolderViewModel
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    <div class="list-group">
        @if (Model.Files != null)
        {
            foreach (var item in Model.Files)
            {
                <a class = "list-group-item" href="@item.Url">
                    <i class="fa @item.FileIcon"></i> @item.Name  @item.LogDate @item.DownloadCounter<div class="text-right">@item.User</div><div class="text-right">@item.Size</div></a>
            }
        }
    </div>
    if (Model.SubDirectories != null)
    {
        foreach (var item in Model.SubDirectories)
        {
            <div class="list-group">
                @Html.ActionLink(item.Name, "Index", "Folder", new {id = item.Id}, new {@class = "list-group-item active"})
                @foreach (var fileViewModel in item.Files)
                {
                    <a class = "list-group-item" href="@fileViewModel.Url">
                        <i class="fa @fileViewModel.FileIcon"></i> @fileViewModel.Name @fileViewModel.Size</a>
                }
            </div>

        }
    }
}
